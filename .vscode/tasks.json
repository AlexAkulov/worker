{
	"version": "0.1.0",
	"command": "flake8",
	"isShellCommand": true,
	"showOutput": "silent",
	"args": [
		"--max-line-length=120",
		"--exclude=moira/graphite",
		"moira"
	],
	"problemMatcher": {
		"fileLocation": [
			"relative",
			"${workspaceRoot}"
		],
		"pattern": {
			"regexp": "^(.*):(\\d+):(\\d+):\\s+([WEF]\\d+)\\s+(.*)$",
			"file": 1,
			"line": 2,
			"column": 3,
			"severity": 4,
			"message": 5
		}
	}
}